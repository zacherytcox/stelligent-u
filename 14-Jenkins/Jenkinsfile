pipeline {

    agent any
    triggers {
        cron('*/5 * * * *')
    }
    environment { 
        lab = '14'
    }
    stages{
        stage("One"){
            steps{

                sh 'ls -alh'
                sh 'pwd'
                sh 'whoami'
                sh 'git clone https://github.com/zacherytcox/stelligent-u.git ./tmp'

            }
        }

        stage("Two"){
            tools {
                maven 'maven' 
            }
            steps{
                
                sh 'ls -alh'
                sh 'pwd'
                sh 'whoami'
                sh 'cd 14-Jenkins/my-app && mvn clean validate compile test package' //` of the root Java project source "`my-app`"
                archiveArtifacts artifacts: 'output/*.txt'
                
            }
        }
    }

}